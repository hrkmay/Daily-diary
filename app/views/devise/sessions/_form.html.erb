<%= form_with model: @user, url: user_session_path, local: true do |f| %>
 <%= render "devise/shared/error_messages", model: f.object %>
 
  <div class="reg-title">
   ログイン
  </div>

  <div class="ses-field">
   <%= f.label :name, "ユーザー名"  %><br />
   <%= f.text_field :name, class: 'ses-form', autofocus: true, autocomplete: "name" %>
  </div>

  <div class="ses-field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, class: 'ses-form', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="ses-field">
    <%= f.label :password, "パスワード"%><br />
    <%= f.password_field :password, class: 'ses-form', autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: :ses_form_btn %>
  </div>
<% end %>
