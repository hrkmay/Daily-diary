<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
 <%= render "devise/shared/error_messages", model: f.object %>
  <div class="reg-title">
   新規登録
  </div>

  <div class="reg-field">
   <%= f.label :name, "ユーザー名" %><br />
   <%= f.text_field :name, class: 'reg-form', autofocus: true, autocomplete: "name" %>
  </div>

  <div class="reg-field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, class: 'reg-form', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="reg-field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'reg-form', autocomplete: "new-password" %>
  </div>

  <div class="reg-field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, class: 'reg-form', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登 録", class: :reg_form_btn %>
  </div>

<% end %>
 
